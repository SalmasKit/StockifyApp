<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Stockify{% endblock %}</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* Professional Error Styling */
        .form-error-message ul { list-style: none; padding: 0; margin: 0; }
        .form-error-message li {
            color: #e11d48; font-size: 0.70rem; font-weight: 800;
            text-transform: uppercase; letter-spacing: 0.05em; margin-top: 0.25rem;
        }
        /* Hide browser default number arrows */
        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button { -webkit-appearance: none; margin: 0; }
        input[type=number] { -moz-appearance: textfield; }

        /* Flash messages animation */
        @keyframes bounce-in {
            0% { transform: translateY(-20px) scale(0.9); opacity: 0; }
            100% { transform: translateY(0) scale(1); opacity: 1; }
        }
        .animate-bounce-in { animation: bounce-in 0.3s cubic-bezier(0.34, 1.56, 0.64, 1) forwards; }
    </style>
</head>
<body class="bg-gray-100 font-sans antialiased">

{# --- GLOBAL FLASH MESSAGES --- #}
<div class="fixed top-6 right-6 z-[500] flex flex-col gap-3 w-full max-w-sm">
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flex items-center p-4 rounded-2xl shadow-2xl border animate-bounce-in
                        {% if label == 'success' %} bg-emerald-50 border-emerald-100 text-emerald-700
                        {% elseif label == 'warning' %} bg-amber-50 border-amber-100 text-amber-700
                        {% else %} bg-red-50 border-red-100 text-red-700 {% endif %}">

                <div class="mr-3">
                    {% if label == 'success' %}
                        <svg class="w-6 h-6 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    {% elseif label == 'warning' %}
                        <svg class="w-6 h-6 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
                    {% else %}
                        <svg class="w-6 h-6 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    {% endif %}
                </div>
                <p class="text-sm font-bold">{{ message }}</p>
                <button onclick="this.parentElement.remove()" class="ml-auto text-slate-400 hover:text-slate-600">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M6 18L18 6M6 6l12 12" stroke-width="2" stroke-linecap="round"/></svg>
                </button>
            </div>
        {% endfor %}
    {% endfor %}
</div>

<div class="flex flex-col min-h-screen">

    <aside class="bg-slate-800 text-white shadow-lg z-50">
        <div class="px-4 md:px-8 flex flex-col md:flex-row md:items-center">

            <div class="flex justify-between items-center py-4 flex-shrink-0">
                <div class="text-xl font-bold uppercase tracking-wider text-blue-400">
                    Stockify
                </div>

                <button onclick="toggleMenu()" class="md:hidden p-2 rounded hover:bg-slate-700">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </button>
            </div>

            <nav id="mobile-menu" class="hidden md:block flex-1">
                <ul class="flex flex-col md:flex-row md:items-center md:justify-center">
                    {% set links = [
                        {'path': 'app_dashboard', 'label': 'Dashboard'},
                        {'path': 'app_product_index', 'label': 'Products'},
                        {'path': 'app_category_index', 'label': 'Categories'},
                        {'path': 'app_donation_page', 'label': 'Donations'},
                        {'path': 'app_restock_page', 'label': 'Restock'},
                        {'path': 'app_transaction_index', 'label': 'Transactions'}
                    ] %}

                    {% for link in links %}
                        {% set is_active = app.request.attributes.get('_route') == link.path %}
                        <li>
                            <a href="{{ path(link.path) }}"
                               class="block py-3 px-4 transition text-[11px] uppercase tracking-widest font-bold rounded-md
                               {{ is_active ? 'text-blue-400' : 'text-slate-300 hover:text-white hover:bg-slate-700' }}">
                                {{ link.label }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </nav>

            <div class="flex items-center gap-2 md:gap-4 py-3 border-t md:border-t-0 border-slate-700 ml-auto">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_admin_users') }}"
                       class="p-2 text-slate-400 hover:text-blue-400 transition-colors border-r border-slate-700 pr-4 mr-2"
                       title="Manage Users">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                        </svg>
                    </a>
                {% endif %}

                <a href="{{ path('app_profile_password') }}"
                   class="flex items-center gap-2 px-3 py-2 bg-slate-700/50 hover:bg-slate-700 text-slate-300 hover:text-blue-400 rounded-xl transition-all border border-slate-700">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    <span class="text-[10px] font-bold uppercase tracking-widest">Account</span>
                </a>

                <a href="{{ path('app_logout') }}"
                   class="px-4 py-2 bg-red-500/10 text-red-400 hover:bg-red-500 hover:text-white rounded-xl text-[10px] font-black uppercase tracking-widest border border-red-500/20 transition-all">
                    Logout
                </a>
            </div>
        </div>
    </aside>

    <div class="flex-1 flex flex-col">
        <header class="bg-white shadow-sm p-4 px-8 border-b">
            <h1 class="text-xl font-bold text-gray-800 uppercase tracking-tight">
                {% block page_title %}{% endblock %}
            </h1>
        </header>

        <main class="p-4 md:p-8">
            {% block body %}{% endblock %}
        </main>
    </div>
</div>

<script>
    function toggleMenu() {
        const menu = document.getElementById('mobile-menu');
        menu.classList.toggle('hidden');
    }
    setTimeout(() => {
        document.querySelectorAll('.animate-bounce-in').forEach(el => {
            el.style.transition = 'opacity 0.5s ease';
            el.style.opacity = '0';
            setTimeout(() => el.remove(), 500);
        });
    }, 5000);
</script>
</body>
</html>
