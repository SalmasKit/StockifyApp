{% extends 'base.html.twig' %}

{% block body %}
    <div class="max-w-[1600px] mx-auto p-4 md:p-8 space-y-10">

        {# --- HEADER SECTION --- #}
            <div>
                <h1 class="text-4xl font-black text-slate-900 tracking-tight">Executive Dashboard</h1>
                <p class="text-slate-500 font-medium">Monitoring inventory health and global stock movements.</p>
            </div>


        <div class="grid grid-cols-12 gap-8">
            {# --- LEFT SIDE (8 Columns) --- #}
            <div class="col-span-12 lg:col-span-8 space-y-8">

                {# 4 Dynamic Cards #}
                <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6">
                    {{ _self.stat_card('Active Products', totalProducts, 'blue', 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4') }}
                    {{ _self.stat_card('Categories', totalCategories, 'emerald', 'M4 6h16M4 10h16M4 14h16M4 18h16') }}
                    {{ _self.stat_card('Net Worth', totalValue|number_format(0) ~ ' DH', 'amber', 'M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3z M12 2a10 10 0 100 20 10 10 0 000-20z') }}
                    {{ _self.stat_card('Operations', totalTransactions, 'purple', 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6') }}
                </div>

                {# Enhanced Chart Container #}
                <div class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-xl shadow-slate-100/50 relative overflow-hidden">
                    <div class="absolute top-0 right-0 p-8 opacity-10">
                        <svg class="w-32 h-32 text-blue-600" fill="currentColor" viewBox="0 0 20 20"><path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path></svg>
                    </div>
                    <h3 class="font-black text-slate-800 mb-8 uppercase tracking-widest text-sm flex items-center gap-2">
                        <span class="w-8 h-1 bg-blue-600 rounded-full"></span>
                        Stock Distribution by Category
                    </h3>
                    <div class="h-[320px] w-full">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>

                {# Styled Latest Transactions #}
                <div class="bg-white rounded-[2.5rem] border border-slate-100 shadow-xl shadow-slate-100/50 overflow-hidden">
                    <div class="p-8 border-b border-slate-50 flex justify-between items-center bg-slate-50/30">
                        <h3 class="font-black text-slate-800 uppercase tracking-widest text-sm">Recent Activity</h3>
                        <span class="px-4 py-1.5 bg-white border border-slate-200 text-slate-500 rounded-xl text-xs font-bold shadow-sm">
                        {{ latestTransactions|length }} updates
                    </span>
                    </div>
                    <div class="divide-y divide-slate-50">
                        {% for trans in latestTransactions %}
                            <div class="p-5 flex items-center justify-between hover:bg-blue-50/30 transition-all group">
                                <div class="flex items-center gap-5">
                                    <div class="w-14 h-14 rounded-2xl bg-white shadow-sm overflow-hidden border-2 border-slate-50 group-hover:border-blue-200 transition-all">
                                        {% if trans.product and trans.product.imageUrl %}
                                            <img src="{{ asset('uploads/products/' ~ trans.product.imageUrl) }}" class="w-full h-full object-cover">
                                        {% else %}
                                            <div class="flex items-center justify-center h-full bg-slate-50 text-2xl">üì¶</div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <p class="font-bold text-slate-900 group-hover:text-blue-700 transition-colors">{{ trans.product ? trans.product.name : 'System Update' }}</p>
                                        <p class="text-xs font-bold text-slate-400 uppercase tracking-tighter">{{ trans.createdAt|date('d M, H:i') }}</p>
                                    </div>
                                </div>
                                <div class="flex flex-col items-end gap-1">
                                <span class="px-4 py-1 rounded-full font-black text-sm shadow-sm {{ trans.type == 'IN' ? 'bg-emerald-100 text-emerald-700' : 'bg-red-100 text-red-700' }}">
                                    {{ trans.type == 'IN' ? '‚Üë' : '‚Üì' }} {{ trans.quantity }}
                                </span>
                                    <span class="text-[10px] font-black text-slate-300 uppercase">{{ trans.type }}</span>
                                </div>
                            </div>
                        {% else %}
                            <div class="p-16 text-center">
                                <div class="w-20 h-20 bg-slate-50 rounded-full flex items-center justify-center mx-auto mb-4 text-4xl">üå´Ô∏è</div>
                                <p class="text-slate-400 font-bold">No data found in history.</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# --- RIGHT SIDE (4 Columns) --- #}
            <div class="col-span-12 lg:col-span-4 space-y-8">
                {# Glassmorphic Stock Status #}
                <div class="bg-gradient-to-br from-slate-800 to-slate-950 rounded-[2.5rem] p-10 text-white shadow-2xl shadow-blue-900/20 relative overflow-hidden">
                    <div class="absolute -top-10 -right-10 w-40 h-40 bg-blue-500/10 rounded-full blur-3xl"></div>
                    <h3 class="font-black text-xl mb-10 flex items-center gap-3">
                        <span class="p-2 bg-blue-500/20 rounded-lg">üìä</span>
                        Stock Health
                    </h3>
                    <div class="space-y-8">
                        {{ _self.stock_row('Optimal Stock', normalCount, 'bg-emerald-400', 'text-emerald-400') }}
                        {{ _self.stock_row('Warning Level', lowCount, 'bg-amber-400', 'text-amber-400') }}
                        {{ _self.stock_row('Critical / Zero', ruptureCount, 'bg-rose-400', 'text-rose-400') }}
                    </div>
                </div>

                {# Urgent Reminders with Red Pulse #}
                <div class="bg-white rounded-[2.5rem] border border-slate-100 shadow-xl shadow-slate-100/50 p-8">
                    <div class="flex items-center justify-between mb-8">
                        <h3 class="font-black text-slate-800 uppercase tracking-widest text-xs italic">Restock Radar</h3>
                        <div class="flex space-x-1">
                            <div class="w-1.5 h-1.5 bg-rose-500 rounded-full animate-ping"></div>
                            <div class="w-1.5 h-1.5 bg-rose-500 rounded-full"></div>
                        </div>
                    </div>
                    <div class="space-y-5">
                        {% for prod in alertProducts %}
                            <div class="group flex items-center gap-4 p-4 rounded-3xl bg-slate-50/50 border border-transparent hover:border-rose-100 hover:bg-rose-50/30 transition-all">
                                <div class="w-12 h-12 rounded-xl bg-white shadow-sm border border-slate-100 overflow-hidden">
                                    {% if prod.imageUrl %}
                                        <img src="{{ asset('uploads/products/' ~ prod.imageUrl) }}" class="w-full h-full object-cover">
                                    {% endif %}
                                </div>
                                <div class="flex-1">
                                    <p class="font-bold text-slate-800 text-sm group-hover:text-rose-700 transition-colors">{{ prod.name }}</p>
                                    <div class="flex items-center gap-2">
                                        <div class="flex-1 h-1.5 bg-slate-200 rounded-full overflow-hidden">
                                            <div class="h-full bg-rose-500" style="width: {{ (prod.quantity / 5 * 100)|round }}%"></div>
                                        </div>
                                        <span class="text-[10px] font-black text-rose-600">{{ prod.quantity }} UNIT</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# --- TWIG MACROS --- #}
    {% macro stat_card(title, value, color, svgPath) %}
        <div class="bg-white p-7 rounded-[2.2rem] border border-slate-100 shadow-xl shadow-slate-100/50 hover:-translate-y-1 transition-all">
            <div class="w-12 h-12 rounded-2xl bg-{{ color }}-50 flex items-center justify-center text-{{ color }}-600 mb-5">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="{{ svgPath }}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </div>
            <p class="text-slate-400 text-[10px] font-black uppercase tracking-[0.2em] mb-1">{{ title }}</p>
            <p class="text-2xl font-black text-slate-900">{{ value }}</p>
        </div>
    {% endmacro %}

    {% macro stock_row(label, count, colorClass, textClass) %}
        <div class="group cursor-default">
            <div class="flex items-center justify-between mb-2">
                <span class="text-slate-400 font-bold text-sm tracking-wide">{{ label }}</span>
                <span class="font-black {{ textClass }}">{{ count }}</span>
            </div>
            <div class="h-2 w-full bg-slate-700/50 rounded-full overflow-hidden">
                <div class="h-full {{ colorClass }} rounded-full transition-all duration-1000" style="width: {{ count > 0 ? '70%' : '5%' }}"></div>
            </div>
        </div>
    {% endmacro %}

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('categoryChart').getContext('2d');

            // Create Gradient
            const gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(59, 130, 246, 1)');
            gradient.addColorStop(1, 'rgba(59, 130, 246, 0.1)');

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: {{ catLabels|json_encode|raw }},
                    datasets: [{
                        data: {{ catValues|json_encode|raw }},
                        backgroundColor: gradient,
                        hoverBackgroundColor: '#2563eb',
                        borderRadius: 15,
                        borderSkipped: false,
                        barThickness: 32
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: {
                            beginAtZero: true,
                            border: { display: false },
                            grid: { color: '#f1f5f9', drawTicks: false },
                            ticks: { color: '#94a3b8', font: { weight: '700', size: 10 }, padding: 10 }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#64748b', font: { weight: '700', size: 11 }, padding: 10 }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
