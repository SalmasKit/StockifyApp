{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Executive Dashboard{% endblock %}

{% block body %}
    <style>
        /* Custom Executive Scrollbar */
        .custom-scrollbar::-webkit-scrollbar {
            width: 5px;
        }
        .custom-scrollbar::-webkit-scrollbar-track {
            background: transparent;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 10px;
        }
        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: #cbd5e1;
        }
    </style>

    <div class="max-w-[1600px] mx-auto px-6 py-10 antialiased space-y-10">

        {# --- ALIGNED EXECUTIVE DASHBOARD HEADER --- #}
        <div class="relative overflow-hidden bg-slate-900 rounded-[2.5rem] p-8 mb-8 shadow-2xl shadow-slate-900/30 border border-slate-800">
            <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>

            <div class="relative flex flex-col lg:flex-row justify-between items-center gap-6">
                <div class="flex items-center gap-6">
                    <div>
                        <h1 class="text-3xl font-black text-white tracking-tight mb-1">Executive Dashboard</h1>
                        <p class="text-slate-400 font-bold uppercase text-[9px] tracking-[0.3em] flex items-center gap-2">
                            <span class="w-1.5 h-1.5 bg-emerald-500 rounded-full animate-pulse"></span>
                            Live System Analytics
                        </p>
                    </div>
                </div>

                <div class="flex items-center gap-3 w-full lg:w-auto">
                    <a href="{{ path('app_product_index') }}"
                       class="w-full lg:w-auto text-center px-6 py-3 bg-white/5 hover:bg-white/10 backdrop-blur-md text-white font-black rounded-xl uppercase text-[10px] tracking-widest transition-all border border-white/10 active:scale-95">
                        View Inventory
                    </a>

                    <a href="{{ path('app_transaction_index') }}"
                       class="w-full lg:w-auto text-center px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white font-black rounded-xl uppercase text-[10px] tracking-widest transition-all shadow-lg active:scale-95">
                        View Transactions
                    </a>

                    <div class="hidden lg:block w-px h-8 bg-slate-800 mx-2"></div>
                    <span class="hidden lg:block text-[9px] font-black text-blue-500 uppercase tracking-widest bg-blue-500/10 px-3 py-1.5 rounded-lg border border-blue-500/20">
                        HQ Node
                    </span>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-12 gap-8">
            {# --- LEFT SIDE: ANALYTICS & ACTIVITY --- #}
            <div class="col-span-12 lg:col-span-8 space-y-8">

                {# 4 Dynamic Cards #}
                <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-4 gap-6">
                    {{ _self.stat_card('Active Products', totalProducts, 'blue', 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4') }}
                    {{ _self.stat_card('Categories', totalCategories, 'emerald', 'M4 6h16M4 10h16M4 14h16M4 18h16') }}
                    {{ _self.stat_card('Total Value', totalValue|number_format(0) ~ ' MAD', 'amber', 'M12 8c-1.657 0-3 1.343-3 3s1.343 3 3 3 3-1.343 3-3-1.343-3-3-3z M12 2a10 10 0 100 20 10 10 0 000-20z') }}
                    {{ _self.stat_card('Operations', totalTransactions, 'purple', 'M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2') }}
                </div>

                {# Enhanced Chart Container #}
                <div class="bg-white p-10 rounded-[3rem] border border-slate-100 shadow-xl shadow-slate-200/40 relative">
                    <div class="flex items-center justify-between mb-10">
                        <div>
                            <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs flex items-center gap-3">
                                <span class="w-8 h-1 bg-blue-600 rounded-full"></span>
                                Stock Distribution
                            </h3>
                        </div>
                    </div>
                    <div class="h-[350px] w-full">
                        <canvas id="categoryChart"></canvas>
                    </div>
                </div>

                {# COMPACT SCROLLABLE TRANSACTIONS (LIMITED TO 10) #}
                <div class="bg-white rounded-[3rem] border border-slate-100 shadow-xl shadow-slate-200/40 overflow-hidden">
                    <div class="p-8 border-b border-slate-50 flex justify-between items-center">
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-xs">Recent Movements</h3>
                        <span class="px-4 py-2 bg-slate-50 text-slate-500 rounded-xl text-[10px] font-black uppercase tracking-widest">
                            Latest 5
                        </span>
                    </div>

                    <div class="divide-y divide-slate-50 max-h-[480px] overflow-y-auto custom-scrollbar">
                        {# APPLYING THE LIMIT HERE #}
                        {% for trans in latestTransactions|slice(0, 5) %}
                            {% set isRestock = trans.type|upper == 'RESTOCK' or trans.type|upper == 'IN' %}
                            <div class="p-4 flex items-center justify-between hover:bg-slate-50/50 transition-all group">
                                <div class="flex items-center gap-5">
                                    <div class="w-12 h-12 rounded-xl bg-slate-50 overflow-hidden border border-slate-100 group-hover:border-blue-200 transition-all flex-shrink-0">
                                        {% if trans.product and trans.product.imageUrl %}
                                            <img src="{{ asset('uploads/products/' ~ trans.product.imageUrl) }}" class="w-full h-full object-cover">
                                        {% else %}
                                            <div class="flex items-center justify-center h-full bg-slate-50 text-lg">ðŸ“¦</div>
                                        {% endif %}
                                    </div>
                                    <div>
                                        <p class="font-black text-slate-800 uppercase text-[11px] group-hover:text-blue-600 transition-colors">{{ trans.product ? trans.product.name : 'System Adjustment' }}</p>
                                        <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest mt-0.5">{{ trans.createdAt|date('d M, Y â€¢ H:i') }}</p>
                                    </div>
                                </div>
                                <div class="flex items-center gap-3">
                                    <span class="text-[11px] font-black {{ isRestock ? 'text-emerald-600' : 'text-rose-600' }}">
                                        {{ isRestock ? '+' : '-' }} {{ trans.quantity }}
                                    </span>
                                    <div class="w-8 h-8 rounded-lg flex items-center justify-center {{ isRestock ? 'bg-emerald-50 text-emerald-600' : 'bg-rose-50 text-rose-600' }}">
                                        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="{{ isRestock ? 'M5 10l7-7m0 0l7 7m-7-7v18' : 'M19 14l-7 7m0 0l-7-7m7 7V3' }}"/></svg>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="p-20 text-center">
                                <p class="text-slate-400 font-black uppercase tracking-[0.2em] text-xs">No Recent Activity Recorded</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# --- RIGHT SIDE: HEALTH & ALERTS --- #}
            <div class="col-span-12 lg:col-span-4 space-y-8">
                <div class="flex items-center justify-between px-2">
                    <h3 class="font-black text-slate-900 uppercase tracking-[0.2em] text-[10px]">Stock Health Pulse</h3>
                    <span class="text-[9px] font-bold text-slate-400">REAL-TIME</span>
                </div>

                {{ _self.health_card('Healthy Levels', 'Optimal Stock', normalCount, 'emerald', 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z') }}
                {{ _self.health_card('Action Required', 'Low Inventory', lowCount, 'amber', 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z') }}
                {{ _self.health_card('Critical Alert', 'Depleted Stock', ruptureCount, 'rose', 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z') }}

                {# Urgent Reminders #}
                <div class="bg-white rounded-[3rem] border border-slate-100 shadow-xl shadow-slate-200/40 p-8">
                    <div class="flex items-center justify-between mb-8 px-2">
                        <h3 class="font-black text-slate-900 uppercase tracking-widest text-[10px]">Critical Restock Radar</h3>
                        <div class="flex gap-1.5">
                            <span class="w-2 h-2 bg-rose-500 rounded-full animate-ping"></span>
                        </div>
                    </div>
                    <div class="space-y-4 max-h-[400px] overflow-y-auto custom-scrollbar pr-2">
                        {% for prod in alertProducts %}
                            <div class="group flex items-center gap-5 p-4 rounded-3xl bg-slate-50 hover:bg-rose-50 transition-all border border-transparent hover:border-rose-100">
                                <div class="w-12 h-12 rounded-2xl bg-white shadow-sm border border-slate-100 overflow-hidden flex-shrink-0">
                                    {% if prod.imageUrl %}
                                        <img src="{{ asset('uploads/products/' ~ prod.imageUrl) }}" class="w-full h-full object-cover">
                                    {% endif %}
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="font-black text-slate-800 text-[10px] uppercase truncate mb-2">{{ prod.name }}</p>
                                    <div class="flex items-center gap-3">
                                        <div class="flex-1 h-1.5 bg-slate-200 rounded-full overflow-hidden">
                                            <div class="h-full bg-rose-500 transition-all duration-1000"
                                                 style="width: {{ min(100, max(5, (prod.quantity / 10 * 100))) }}%">
                                            </div>
                                        </div>
                                        <span class="text-[10px] font-black text-rose-600 tracking-tighter">{{ prod.quantity }}</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# --- TWIG MACROS --- #}
    {% macro stat_card(title, value, color, svgPath) %}
        <div class="bg-white p-8 rounded-[2.5rem] border border-slate-100 shadow-xl shadow-slate-200/30 hover:-translate-y-1.5 transition-all duration-300">
            <div class="w-12 h-12 rounded-2xl bg-{{ color }}-50 flex items-center justify-center text-{{ color }}-600 mb-6 shadow-sm">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="{{ svgPath }}" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </div>
            <p class="text-slate-400 text-[9px] font-black uppercase tracking-[0.2em] mb-1">{{ title }}</p>
            <p class="text-xl font-black text-slate-900 tracking-tight">{{ value }}</p>
        </div>
    {% endmacro %}

    {% macro health_card(label, sub, count, color, path) %}
        <div class="bg-white rounded-[2rem] p-6 border border-slate-100 shadow-xl shadow-slate-200/30 group hover:border-{{ color }}-200 transition-all">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-3">
                    <div class="w-10 h-10 rounded-xl bg-{{ color }}-50 text-{{ color }}-600 flex items-center justify-center">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="{{ path }}"/></svg>
                    </div>
                    <div>
                        <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest">{{ label }}</p>
                        <p class="text-sm font-black text-slate-800">{{ sub }}</p>
                    </div>
                </div>
                <span class="text-2xl font-black text-{{ color }}-600">{{ count }}</span>
            </div>
            <div class="h-1.5 w-full bg-slate-50 rounded-full overflow-hidden">
                <div class="h-full bg-{{ color }}-500 rounded-full" style="width: {{ count > 0 ? '70%' : '0%' }}"></div>
            </div>
        </div>
    {% endmacro %}

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx = document.getElementById('categoryChart').getContext('2d');
            const gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, '#3b82f6');
            gradient.addColorStop(1, '#60a5fa00');

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: {{ catLabels|json_encode|raw }},
                    datasets: [{
                        data: {{ catValues|json_encode|raw }},
                        backgroundColor: gradient,
                        hoverBackgroundColor: '#2563eb',
                        borderRadius: 12,
                        borderSkipped: false,
                        barThickness: 28
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: '#f8fafc', drawTicks: false },
                            border: { display: false },
                            ticks: { color: '#94a3b8', font: { weight: '800', size: 9 }, padding: 10 }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#475569', font: { weight: '800', size: 10 }, padding: 10 }
                        }
                    }
                }
            });
        });
    </script>
{% endblock %}
