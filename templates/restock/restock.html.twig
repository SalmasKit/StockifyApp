{% extends 'base.html.twig' %}

{% block title %}Inventory Restock Portal{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-6 py-10 antialiased">

        {# --- GLASS HEADER --- #}
        {# --- ALIGNED RESTOCK CENTER HEADER --- #}
        <div class="relative overflow-hidden bg-slate-900 rounded-[2.5rem] p-8 mb-8 shadow-2xl shadow-slate-900/30 border border-slate-800">
            {# Matching the blur size and placement (w-80 h-80) #}
            <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 bg-emerald-500/10 rounded-full blur-3xl"></div>

            <div class="relative flex flex-col lg:flex-row justify-between items-center gap-6">
                <div class="flex items-center gap-6">
                    <div>
                        {# Matching text-3xl and tracking #}
                        <h1 class="text-3xl font-black text-white tracking-tight mb-1">Restock Center</h1>
                        <div class="flex items-center gap-2">
                            <span class="flex h-1.5 w-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
                            {# Matching text-[9px] and tracking #}
                            <p class="text-slate-400 font-bold uppercase text-[9px] tracking-[0.3em]">Master Inventory Management</p>
                        </div>
                    </div>
                </div>

                <div class="flex flex-col sm:flex-row items-center gap-4 w-full lg:w-auto">
                    {# Matching the search bar container width (sm:w-72) and height (py-3) #}
                    <div class="relative w-full sm:w-72 group">
                        <input type="text" id="restockSearch" onkeyup="filterProducts()" placeholder="Filter catalog..."
                               class="w-full pl-11 pr-4 py-3 bg-slate-800/50 border-2 border-slate-700 focus:border-emerald-500/50 focus:bg-slate-800 rounded-xl outline-none transition-all font-bold text-white placeholder:text-slate-500 shadow-2xl text-xs">
                        {# Matching the SVG placement (left-4 top-3.5) #}
                        <svg class="w-4 h-4 text-slate-500 absolute left-4 top-3.5 group-focus-within:text-emerald-400 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-width="2.5" stroke-linecap="round"/>
                        </svg>
                    </div>

                    {# Added a button if needed, or you can remove this block if you only want the search bar #}
                    <div class="hidden lg:block w-px h-8 bg-slate-800 mx-2"></div>
                    <span class="hidden lg:block text-[9px] font-black text-emerald-500 uppercase tracking-widest bg-emerald-500/10 px-3 py-1.5 rounded-lg border border-emerald-500/20">
                Live Status
            </span>
                </div>
            </div>
        </div>

        {# --- PRODUCT GRID --- #}
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-40" id="productGrid">
            {% for product in products %}
                {% set is_low = product.quantity < 10 %}
                <div class="product-card group relative bg-white rounded-[2.5rem] p-2 border border-slate-200 shadow-sm hover:shadow-2xl hover:shadow-emerald-500/10 hover:-translate-y-1 transition-all duration-300 cursor-pointer overflow-hidden active:scale-95"
                     onclick="toggleSelection(this)"
                     data-id="{{ product.id }}"
                     data-name="{{ product.name }}"
                     data-unit="{{ product.unit }}">

                    <div class="bg-slate-50 rounded-[2.2rem] p-6 h-full transition-colors group-[.selected]:bg-emerald-50 group-[.selected]:border-emerald-100">
                        {# Selection Indicator #}
                        <div class="absolute top-6 right-6 z-10 opacity-0 group-[.selected]:opacity-100 transition-all scale-50 group-[.selected]:scale-100">
                            <div class="bg-emerald-600 text-white p-2 rounded-2xl shadow-lg">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M5 13l4 4L19 7" stroke-width="4" stroke-linecap="round" stroke-linejoin="round"/></svg>
                            </div>
                        </div>

                        {# Low Stock Alert Badge #}
                        {% if is_low %}
                            <div class="absolute top-6 left-6 flex items-center gap-1.5 bg-amber-100 text-amber-700 px-3 py-1 rounded-full text-[9px] font-black uppercase tracking-tighter animate-pulse group-[.selected]:hidden">
                                <span class="w-1 h-1 bg-amber-600 rounded-full"></span> Low Stock
                            </div>
                        {% endif %}

                        <div class="flex flex-col items-center py-4">
                            <div class="w-24 h-24 bg-white rounded-[2rem] shadow-inner flex items-center justify-center mb-6 overflow-hidden border border-slate-100 group-hover:scale-110 transition-transform duration-500">
                                {% if product.imageUrl %}
                                    <img src="{{ asset('uploads/products/' ~ product.imageUrl) }}" class="w-full h-full object-cover">
                                {% else %}
                                    <span class="font-black text-slate-200 text-4xl">{{ product.name|slice(0,1)|upper }}</span>
                                {% endif %}
                            </div>

                            <h4 class="font-black text-slate-800 text-sm uppercase tracking-tight text-center mb-2 px-2 truncate w-full group-[.selected]:text-emerald-900">{{ product.name }}</h4>

                            <div class="flex items-center gap-2">
                                <span class="text-[10px] font-black uppercase text-slate-400 group-[.selected]:text-emerald-500">Current Balance:</span>
                                <span class="text-xs font-black text-slate-900 group-[.selected]:text-emerald-700">{{ product.quantity }} {{ product.unit }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        {# --- FLOATING ACTION DOCK --- #}
        <div id="actionBar" class="fixed bottom-10 left-1/2 -translate-x-1/2 w-[95%] max-w-5xl bg-white/80 backdrop-blur-2xl rounded-[3rem] p-4 shadow-[0_25px_50px_-12px_rgba(0,0,0,0.25)] translate-y-48 transition-all duration-700 z-50 border border-white/50">
            <div class="flex flex-col md:flex-row items-center justify-between gap-4 px-4">
                <div class="flex items-center gap-6">
                    <div class="relative">
                        <div class="absolute inset-0 bg-emerald-500 rounded-[1.8rem] blur-lg opacity-40 animate-pulse"></div>
                        <span id="selectedCount" class="relative w-16 h-16 bg-slate-900 text-white flex items-center justify-center rounded-[1.8rem] font-black text-2xl">0</span>
                    </div>
                    <div>
                        <p class="text-slate-900 font-black uppercase text-[13px] tracking-widest">Entry Batch Prepared</p>
                        <p class="text-slate-400 text-[10px] font-bold uppercase tracking-[0.2em]">Click 'Process' to define quantities</p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <button onclick="clearAll()" class="px-8 py-4 text-slate-400 hover:text-red-500 font-black uppercase text-[11px] tracking-widest transition-all">Reset</button>
                    <button onclick="openQuantityDrawer()" class="px-12 py-5 bg-emerald-600 hover:bg-emerald-500 text-white font-black rounded-[2rem] uppercase text-[12px] tracking-[0.2em] transition-all shadow-xl shadow-emerald-200 active:scale-95">
                        Process Quantities
                    </button>
                </div>
            </div>
        </div>

        {# --- MODAL 1: QUANTITIES --- #}
        <div id="entryModal" class="fixed inset-0 z-[100] hidden items-center justify-center p-6 bg-slate-900/60 backdrop-blur-md transition-all duration-500">
            <div class="bg-white rounded-[4rem] w-full max-w-2xl max-h-[80vh] flex flex-col shadow-2xl border border-white overflow-hidden">
                <div class="p-12 bg-slate-50 border-b border-slate-100 flex justify-between items-center">
                    <div>
                        <h3 class="text-3xl font-black text-slate-900 uppercase tracking-tight">Stock Manifest</h3>
                        <p class="text-slate-400 font-bold text-xs uppercase tracking-widest mt-1">Define the incoming volume</p>
                    </div>
                    <button onclick="closeModal('entryModal')" class="w-12 h-12 flex items-center justify-center bg-white text-slate-400 hover:text-red-500 rounded-2xl shadow-sm transition-all">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M6 18L18 6M6 6l12 12" stroke-width="3" stroke-linecap="round"/></svg>
                    </button>
                </div>

                <div id="modalList" class="flex-grow overflow-y-auto p-12 space-y-6 custom-scrollbar">
                    {# JS Populated #}
                </div>

                <div class="p-12 bg-white border-t border-slate-100 flex justify-end">
                    <button onclick="requestFinalConfirmation()" class="w-full py-6 bg-slate-900 hover:bg-emerald-600 text-white font-black rounded-[2.5rem] uppercase text-[13px] tracking-[0.3em] transition-all shadow-2xl shadow-slate-200">
                        Submit Updates
                    </button>
                </div>
            </div>
        </div>

        {# --- MODAL 2: SAFETY VERIFICATION --- #}
        <div id="safetyModal" class="fixed inset-0 z-[200] hidden items-center justify-center p-6 bg-slate-900/90 backdrop-blur-2xl">
            <div class="bg-white rounded-[4rem] w-full max-w-md p-12 shadow-2xl text-center border border-white">
                <div class="w-28 h-28 bg-emerald-50 text-emerald-500 rounded-full flex items-center justify-center mx-auto mb-10 shadow-inner">
                    <svg class="w-14 h-14" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                </div>

                <h3 class="text-3xl font-black text-slate-900 mb-4 tracking-tight">Save Changes?</h3>
                <p class="text-slate-500 font-semibold mb-10 leading-relaxed px-4">
                    You are about to modify the master ledger. This action will reflect immediately across all systems.
                </p>

                <div class="flex flex-col gap-4">
                    <button id="finalConfirmBtn" onclick="confirmAndSend()"
                            class="w-full py-6 bg-emerald-600 hover:bg-emerald-700 text-white font-black rounded-[2rem] uppercase text-[11px] tracking-[0.2em] transition-all shadow-xl shadow-emerald-200">
                        Verify & Save
                    </button>
                    <button onclick="closeModal('safetyModal')"
                            class="w-full py-6 text-slate-400 hover:text-slate-900 font-black rounded-2xl uppercase text-[10px] tracking-widest transition-all">
                        Go Back
                    </button>
                </div>
            </div>
        </div>
    </div>

    <style>
        .selected .bg-slate-50 { border: 2px solid #10b981; background-color: #ecfdf5 !important; }
        .custom-scrollbar::-webkit-scrollbar { width: 8px; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #e2e8f0; border-radius: 20px; }
        input[type=number]::-webkit-inner-spin-button { display: none; }
    </style>

    <script>
        let selectedProducts = new Map();

        function toggleSelection(el) {
            const id = el.dataset.id;
            if (selectedProducts.has(id)) {
                selectedProducts.delete(id);
                el.classList.remove('selected');
            } else {
                selectedProducts.set(id, { name: el.dataset.name, unit: el.dataset.unit, amount: 0 });
                el.classList.add('selected');
            }
            updateActionBar();
        }

        function updateActionBar() {
            const bar = document.getElementById('actionBar');
            const count = document.getElementById('selectedCount');
            count.innerText = selectedProducts.size;

            if (selectedProducts.size > 0) {
                bar.classList.replace('translate-y-48', 'translate-y-0');
            } else {
                bar.classList.replace('translate-y-0', 'translate-y-48');
            }
        }

        function openQuantityDrawer() {
            const list = document.getElementById('modalList');
            list.innerHTML = '';
            selectedProducts.forEach((data, id) => {
                list.innerHTML += `
                <div class="flex items-center justify-between p-8 bg-slate-50/50 rounded-[2.5rem] border border-slate-100 hover:border-emerald-200 transition-all">
                    <div>
                        <h4 class="font-black text-slate-900 uppercase text-sm tracking-tight">${data.name}</h4>
                        <p class="text-[9px] font-black text-emerald-500 uppercase tracking-widest mt-1">Inbound Unit: ${data.unit}</p>
                    </div>
                    <div class="flex items-center gap-5">
                        <input type="number" placeholder="0" onchange="updateAmount('${id}', this.value)"
                               class="w-36 px-6 py-4 bg-white border-2 border-slate-100 focus:border-emerald-500 rounded-2xl text-center font-black text-slate-900 outline-none transition-all shadow-sm">
                    </div>
                </div>
            `;
            });
            document.getElementById('entryModal').classList.replace('hidden', 'flex');
        }

        function updateAmount(id, val) {
            if (selectedProducts.has(id)) {
                selectedProducts.get(id).amount = parseFloat(val) || 0;
            }
        }

        function requestFinalConfirmation() {
            const items = Array.from(selectedProducts.values());
            if (items.some(i => i.amount > 0)) {
                document.getElementById('safetyModal').classList.replace('hidden', 'flex');
            } else {
                alert("Please enter a valid amount.");
            }
        }

        async function confirmAndSend() {
            const btn = document.getElementById('finalConfirmBtn');
            btn.disabled = true;
            btn.innerText = "Syncing Master Data...";
            const payload = Array.from(selectedProducts, ([id, value]) => ({ id, amount: value.amount }));

            try {
                const response = await fetch("{{ path('app_restock_confirm') }}", {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ items: payload })
                });

                if (response.ok) window.location.reload();
                else {
                    alert("Database Sync Failed.");
                    btn.disabled = false;
                }
            } catch (e) { console.error(e); btn.disabled = false; }
        }

        function closeModal(id) { document.getElementById(id).classList.replace('flex', 'hidden'); }

        function filterProducts() {
            let filter = document.getElementById('restockSearch').value.toLowerCase();
            document.querySelectorAll('.product-card').forEach(card => {
                const match = card.dataset.name.toLowerCase().includes(filter);
                card.style.display = match ? 'block' : 'none';
            });
        }

        function clearAll() {
            selectedProducts.clear();
            document.querySelectorAll('.product-card').forEach(c => c.classList.remove('selected'));
            updateActionBar();
        }
    </script>
{% endblock %}
