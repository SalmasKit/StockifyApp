{% extends 'base.html.twig' %}

{% block title %}Product Inventory{% endblock %}
{% block page_title %}Products List{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
            <div>
                <p class="text-slate-500 text-base font-medium">Monitor stock levels and manage your product catalog.</p>
            </div>
            <div class="flex items-center gap-3">
                {# Button excel export #}
                <a href="{{ path('app_product_export_excel', {sort: currentSort}) }}"
                   class="inline-flex items-center px-4 py-3 bg-emerald-50 hover:bg-emerald-100 text-emerald-700 text-sm font-bold rounded-lg transition-all border border-emerald-100">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    Export Excel
                </a>
                {# Button dropdown for sort #}
                <div class="relative inline-block text-left">
                    <select onchange="window.location.href='?sort=' + this.value"
                            class="bg-white border-2 border-gray-100 text-slate-700 text-sm font-bold rounded-lg px-4 py-3 outline-none focus:border-blue-500 transition-all cursor-pointer shadow-sm">
                        <option value="desc" {{ currentSort == 'desc' ? 'selected' : '' }}>Newest First</option>
                        <option value="asc" {{ currentSort == 'asc' ? 'selected' : '' }}>Oldest First</option>
                    </select>
                </div>
                {# Button toggle to multiple select #}
                <button id="toggleSelectMode"
                        class="inline-flex items-center px-4 py-3 bg-slate-100 hover:bg-slate-200 text-slate-700 text-sm font-bold rounded-lg transition-all active:scale-95">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                    <span id="selectModeText">Select Items</span>
                </button>
                {# Button Add prod #}
                <a href="{{ path('app_product_create') }}"
                   class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white text-sm font-bold rounded-lg shadow-lg shadow-blue-100 transition-all transform active:scale-95 group">
                    <svg class="w-5 h-5 mr-2 text-white/80 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add New Product
                </a>
            </div>
        </div>

        {# Live Search #}
        <div class="mb-6 relative">
            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                <svg class="h-5 w-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-width="2" stroke-linecap="round"/></svg>
            </div>
            <input type="text" id="tableSearch"
                   class="block w-full pl-11 pr-4 py-3 border-2 border-gray-100 rounded-2xl focus:border-blue-500 focus:ring-4 focus:ring-blue-50 transition-all outline-none text-sm font-medium"
                   placeholder="Search products by name, category or description...">
        </div>

        <div class="bg-white rounded-[2rem] border-2 border-gray-100 shadow-sm overflow-hidden">
            <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                    <thead>
                    <tr class="bg-slate-50/50 border-b-2 border-gray-100">
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Visual</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Product Info</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Pricing</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Stock Status</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-[0.2em]">Category</th>
                        <th class="px-8 py-5 text-xs font-black text-slate-400 uppercase tracking-[0.2em] text-right">Actions</th>
                        <th id="checkboxHeader"
                            class="transition-all duration-300 ease-in-out"
                            style="width: 0; min-width: 0; max-width: 0; padding: 0; opacity: 0; overflow: hidden;">
                            <input type="checkbox" id="selectAll" class="w-5 h-5 rounded border-gray-300 text-blue-600">
                        </th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                    {% for product in products %}
                        <tr class="hover:bg-blue-50/40 transition-colors group">
                            <td class="px-8 py-6">
                                {% if product.imageUrl %}
                                    <div class="relative h-20 w-20 group/img">
                                        <img src="{{ asset('uploads/products/' ~ product.imageUrl) }}"
                                             onclick="maximizeImage(this.src)"
                                             class="h-full w-full rounded-2xl object-cover cursor-zoom-in border-2 border-white shadow-md ring-1 ring-gray-200 group-hover/img:ring-blue-400 transition-all"
                                             alt="{{ product.name }}">
                                    </div>
                                {% else %}
                                    <div class="h-20 w-20 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-300 border-2 border-dashed border-gray-200">
                                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                                    </div>
                                {% endif %}
                            </td>

                            <td class="px-8 py-6">
                                <div class="font-black text-slate-800 text-xl mb-1">{{ product.name }}</div>
                                <div class="text-slate-500 text-sm font-medium max-w-xs leading-relaxed">{{ product.description|slice(0, 60) }}...</div>
                            </td>

                            <td class="px-8 py-6">
                                <span class="text-xl font-bold text-slate-900">{{ product.price|number_format(2, '.', ',') }}</span>
                                <span class="text-xs font-black text-blue-500 ml-1">MAD</span>
                            </td>

                            <td class="px-8 py-6">
                                <div class="inline-flex items-center px-4 py-2 rounded-xl text-sm font-bold {{ product.quantity < 5 ? 'bg-red-50 text-red-600 border border-red-100' : 'bg-emerald-50 text-emerald-700 border border-emerald-100' }}">
                                    <span class="w-2 h-2 rounded-full mr-2 {{ product.quantity < 5 ? 'bg-red-500 animate-pulse' : 'bg-emerald-500' }}"></span>
                                    {{ product.quantity }} <span class="ml-1 opacity-60 font-medium uppercase text-[10px]">{{ product.unit }}</span>
                                </div>
                            </td>

                            <td class="px-8 py-6">
                                {% if product.category %}
                                    <span class="px-4 py-1.5 bg-slate-100 text-slate-600 text-xs font-extrabold rounded-full border border-slate-200 uppercase tracking-tight">
                                        {{ product.category.name }}
                                    </span>
                                {% else %}
                                    <span class="text-slate-300 italic text-sm">Unassigned</span>
                                {% endif %}
                            </td>

                            <td class="px-8 py-6 text-right">
                                <div class="flex justify-end items-center space-x-2">
                                    <a href="{{ path('app_product_edit', {id: product.id}) }}"
                                       class="p-3 text-slate-400 hover:text-blue-600 hover:bg-blue-50 rounded-xl transition-all shadow-sm hover:shadow-md border border-transparent hover:border-blue-100"
                                       title="Edit Product">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                                    </a>

                                    <button type="button"
                                            onclick="openConfirmModal('delete', '{{ path('app_product_delete', {id: product.id}) }}', '{{ csrf_token('delete' ~ product.id) }}')"
                                            class="p-3 text-slate-400 hover:text-red-600 hover:bg-red-50 rounded-xl transition-all shadow-sm hover:shadow-md border border-transparent hover:border-red-100"
                                            title="Delete Product">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                                    </button>
                                </div>
                            </td>
                            <td class="checkbox-col transition-all duration-300 ease-in-out"
                                style="width: 0; min-width: 0; max-width: 0; padding: 0; opacity: 0; overflow: hidden;">
                                <input type="checkbox" value="{{ product.id }}" class="product-checkbox w-5 h-5 rounded border-gray-300 text-blue-600">
                            </td>
                            <td class="px-8 py-6">
                                <div onclick="toggleStock({{ product.id }})"
                                     class="cursor-pointer inline-flex items-center px-4 py-2 rounded-xl text-sm font-bold transition-all hover:scale-105 {{ product.quantity < 1 ? 'bg-red-50 text-red-600 border border-red-100' : 'bg-emerald-50 text-emerald-700 border border-emerald-100' }}">
                                    <span class="w-2 h-2 rounded-full mr-2 {{ product.quantity < 1 ? 'bg-red-500' : 'bg-emerald-500' }}"></span>
                                    <span id="qty-text-{{ product.id }}">{{ product.quantity > 0 ? 'In Stock' : 'Out of Stock' }}</span>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# multiple deletion #}
            <div id="batchBar" class="fixed bottom-10 left-1/2 -translate-x-1/2 bg-slate-900 text-white px-8 py-4 rounded-2xl shadow-2xl flex items-center gap-6 translate-y-32 transition-all duration-300 z-[100]">
                <span class="text-sm font-bold"><span id="selectedCount">0</span> Items Selected</span>
                <div class="h-6 w-px bg-slate-700"></div>
                <form id="bulkDeleteForm" action="{{ path('app_product_bulk_delete') }}" method="POST" onsubmit="return confirm('Are you sure you want to delete all selected items?')">
                    <input type="hidden" name="ids" id="bulkIdsInput">
                    <button type="submit" class="text-red-400 hover:text-red-300 font-bold text-sm flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2"/></svg>
                        Delete Selected
                    </button>
                </form>
            </div>
        </div>

        {# if no item found in search #}
        <div id="noResults" class="hidden py-20 text-center">
            <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-slate-50 mb-4">
                <svg class="w-10 h-10 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-width="2" stroke-linecap="round"/></svg>
            </div>
            <h3 class="text-lg font-bold text-slate-700">No matching products</h3>
            <p class="text-slate-400 text-sm">Try adjusting your search terms or filters.</p>
        </div>
    </div>

    <script>

        //Search
        document.getElementById('tableSearch').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            let rows = document.querySelectorAll('tbody tr');

            rows.forEach(row => {
                let text = row.innerText.toLowerCase();
                row.style.display = text.includes(filter) ? '' : 'none';
            });

            //if no item found
            let visibleRows = Array.from(rows).filter(r => r.style.display !== 'none').length;
            document.getElementById('noResults').classList.toggle('hidden', visibleRows > 0);
        });


        //Bulk Deletion
        const toggleBtn = document.getElementById('toggleSelectMode');
        const selectModeText = document.getElementById('selectModeText');
        const checkboxCols = document.querySelectorAll('.checkbox-col');
        const checkboxHeader = document.getElementById('checkboxHeader');
        let isSelectMode = false;

        toggleBtn.addEventListener('click', () => {
            isSelectMode = !isSelectMode;

            // 1. Toggle Button UI
            if (isSelectMode) {
                toggleBtn.classList.replace('bg-slate-100', 'bg-blue-600');
                toggleBtn.classList.replace('text-slate-700', 'text-white');
                selectModeText.innerText = "Cancel Selection";
            } else {
                toggleBtn.classList.replace('bg-blue-600', 'bg-slate-100');
                toggleBtn.classList.replace('text-white', 'text-slate-700');
                selectModeText.innerText = "Select Items";

                // Clear selections on cancel
                document.querySelectorAll('.product-checkbox').forEach(cb => cb.checked = false);
                if(typeof updateBatchBar === "function") updateBatchBar();
            }

            // 2. The Logic to show/hide the column
            const applyStyles = (el) => {
                if (isSelectMode) {
                    el.style.width = '60px';
                    el.style.minWidth = '60px';
                    el.style.maxWidth = '60px';
                    el.style.paddingLeft = '2rem'; // Equal to px-8
                    el.style.paddingRight = '2rem';
                    el.style.opacity = '1';
                } else {
                    el.style.width = '0';
                    el.style.minWidth = '0';
                    el.style.maxWidth = '0';
                    el.style.padding = '0';
                    el.style.opacity = '0';
                }
            };

            applyStyles(checkboxHeader);
            checkboxCols.forEach(col => applyStyles(col));
        });
        // 1. Select All Functionality
        const selectAllCheckbox = document.getElementById('selectAll');

        selectAllCheckbox.addEventListener('change', function() {
            const rowCheckboxes = document.querySelectorAll('.product-checkbox');
            rowCheckboxes.forEach(checkbox => {
                checkbox.checked = selectAllCheckbox.checked;
            });
            updateBatchBar();
        });

        // 2. Individual Checkbox Listener & Batch Bar Logic
        function updateBatchBar() {
            const batchBar = document.getElementById('batchBar');
            const selectedCount = document.getElementById('selectedCount');
            const bulkIdsInput = document.getElementById('bulkIdsInput');
            const checked = document.querySelectorAll('.product-checkbox:checked');
            const totalCheckboxes = document.querySelectorAll('.product-checkbox').length;

            // Sync the "Select All" state (uncheck it if we manually uncheck a row)
            if (selectAllCheckbox) {
                selectAllCheckbox.checked = checked.length === totalCheckboxes && totalCheckboxes > 0;
            }

            if (checked.length > 0) {
                // Show bar and update numbers
                selectedCount.innerText = checked.length;
                batchBar.classList.remove('translate-y-32', 'opacity-0');

                // Map selected IDs for the hidden form input
                const ids = Array.from(checked).map(cb => cb.value);
                bulkIdsInput.value = ids.join(',');
            } else {
                // Hide bar
                batchBar.classList.add('translate-y-32', 'opacity-0');
                bulkIdsInput.value = '';
            }
        }

        // 3. Add listeners to row checkboxes so the bar updates when clicked individually
        document.querySelectorAll('.product-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', updateBatchBar);
        });
    </script>
{% endblock %}
