{% extends 'base.html.twig' %}

{% block title %}Products Catalog{% endblock %}

{% block body %}
    <div class="max-w-7xl mx-auto px-6 py-10 antialiased">

        {# --- ALIGNED INVENTORY HEADER --- #}
        <div class="relative overflow-hidden bg-slate-900 rounded-[2.5rem] p-8 mb-8 shadow-2xl shadow-slate-900/30 border border-slate-800">
            {# Aligned Blur: w-80 h-80 #}
            <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>

            <div class="relative flex flex-col lg:flex-row justify-between items-center gap-6">
                <div class="flex items-center gap-6">
                    {# Sapphire Icon Block: Matching Dashboard Dimensions #}
                    <div>
                        {# Aligned Typography: text-3xl / text-[9px] #}
                        <h1 class="text-3xl font-black text-white tracking-tight mb-1">Inventory</h1>
                        <p class="text-slate-400 font-bold uppercase text-[9px] tracking-[0.3em]">Live Product Stock & Catalog</p>
                    </div>
                </div>

                <div class="flex flex-wrap items-center justify-center lg:justify-end gap-3 w-full lg:w-auto">
                    {# Export Button: Aligned py-3 #}
                    <a href="{{ path('app_product_export_excel', {sort: currentSort}) }}" id="exportBtn"
                       class="inline-flex items-center px-5 py-3 bg-slate-800 hover:bg-slate-700 text-slate-300 text-[10px] font-black rounded-xl transition-all uppercase tracking-widest border border-slate-700">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                        Export
                    </a>

                    {# Select Mode Button: Using Aligned Glass Style #}
                    <button id="toggleSelectMode"
                            class="inline-flex items-center px-5 py-3 bg-white/5 hover:bg-white/10 text-white text-[10px] font-black rounded-xl transition-all uppercase tracking-widest border border-white/10">
                        <span id="selectModeText">Select Items</span>
                    </button>

                    {# Add Product Button: Aligned py-3 #}
                    <a href="{{ path('app_product_create') }}"
                       class="inline-flex items-center px-6 py-3 bg-blue-600 hover:bg-blue-500 text-white text-[10px] font-black rounded-xl shadow-xl shadow-blue-500/20 transition-all active:scale-95 uppercase tracking-widest">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4"/>
                        </svg>
                        Add Product
                    </a>
                </div>
            </div>
        </div>

        {# --- REFINED SEARCH & SORT --- #}
        <div class="bg-white rounded-[2rem] border border-slate-100 p-4 mb-8 shadow-sm flex flex-col md:flex-row gap-4">
            <div class="relative flex-grow group">
                <input type="text" id="tableSearch" placeholder="Search products..."
                       class="w-full pl-11 pr-4 py-3 bg-slate-50 border-2 border-transparent focus:border-blue-500 rounded-xl outline-none transition-all font-bold text-slate-700 placeholder:text-slate-400 text-xs">
                <svg class="w-4 h-4 text-slate-400 absolute left-4 top-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-width="2.5" stroke-linecap="round"/></svg>
            </div>
            <select onchange="window.location.href='?sort=' + this.value"
                    class="bg-slate-50 border-2 border-transparent focus:border-blue-500 rounded-xl px-4 py-3 font-bold text-slate-700 text-xs outline-none cursor-pointer">
                <option value="desc" {{ currentSort == 'desc' ? 'selected' : '' }}>Newest Added</option>
                <option value="asc" {{ currentSort == 'asc' ? 'selected' : '' }}>Oldest Added</option>
            </select>
        </div>

        {% if products|length > 0 %}
            {# --- COMPACT GRID (4 PER LINE) --- #}
            <div id="productGrid" class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
                {% for product in products %}
                    <div class="product-card group bg-white rounded-[2.5rem] border border-slate-100 p-5 shadow-sm hover:shadow-xl hover:border-blue-100 hover:-translate-y-1.5 transition-all duration-300 relative">

                        {# Selection Checkbox (Hidden initially) #}
                        <div class="checkbox-col absolute top-4 left-4 z-20 opacity-0 pointer-events-none transition-all duration-300">
                            <input type="checkbox" value="{{ product.id }}" class="product-checkbox w-6 h-6 rounded-lg border-2 border-slate-300 text-blue-600 focus:ring-blue-500 cursor-pointer">
                        </div>

                        {# Actions #}
                        <div class="absolute top-4 right-4 flex items-center gap-1.5 opacity-0 group-hover:opacity-100 transition-all transform scale-90 group-hover:scale-100 z-10">
                            <a href="{{ path('app_product_edit', {id: product.id}) }}" class="p-2 bg-white/90 backdrop-blur text-slate-400 hover:text-blue-600 rounded-lg shadow-sm border border-slate-100 transition-all">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" stroke-width="2.5" stroke-linecap="round"/></svg>
                            </a>
                            <button onclick="openConfirmModal('delete', '{{ path('app_product_delete', {id: product.id}) }}', '{{ csrf_token('delete' ~ product.id) }}')"
                                    class="p-2 bg-white/90 backdrop-blur text-slate-400 hover:text-red-500 rounded-lg shadow-sm border border-slate-100 transition-all">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2.5" stroke-linecap="round"/></svg>
                            </button>
                        </div>

                        <div class="flex flex-col h-full">
                            <div class="aspect-square w-full rounded-2xl bg-slate-50 overflow-hidden mb-4 border border-slate-50 group-hover:border-blue-50 transition-all">
                                {% if product.imageUrl %}
                                    <img src="{{ asset('uploads/products/' ~ product.imageUrl) }}" onclick="maximizeImage(this)"
                                         class="w-full h-full object-cover cursor-zoom-in transition-transform duration-500 group-hover:scale-110">
                                {% else %}
                                    <div class="w-full h-full flex items-center justify-center text-slate-200">
                                        <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" stroke-width="2"/></svg>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="mb-2">
                                <span class="text-[8px] font-black text-blue-500 uppercase tracking-[0.2em] bg-blue-50 px-2 py-0.5 rounded-md">
                                    {{ product.category ? product.category.name : 'No Category' }}
                                </span>
                            </div>

                            <h3 class="product-name text-sm font-black text-slate-800 mb-1 truncate uppercase group-hover:text-blue-600 transition-colors">{{ product.name }}</h3>
                            <p class="text-slate-500 text-[10px] font-semibold mb-4 line-clamp-1">{{ product.description }}</p>

                            <div class="mt-auto pt-4 border-t border-slate-50 flex items-center justify-between">
                                <div class="flex flex-col">
                                    <span class="text-[8px] font-black text-slate-400 uppercase tracking-tighter">Price</span>
                                    <span class="text-sm font-black text-slate-900">{{ product.price|number_format(2) }} <span class="text-[8px] text-blue-600">MAD</span></span>
                                </div>
                                <div class="text-right">
                                    <span class="text-[8px] font-black text-slate-400 uppercase tracking-tighter block">Stock</span>
                                    <span class="text-[11px] font-black {{ product.quantity < 5 ? 'text-red-500 animate-pulse' : 'text-emerald-600' }}">
                                        {{ product.quantity }} <span class="text-[9px] uppercase">{{ product.unit }}</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Batch Deletion Bar #}
            <div id="batchBar" class="fixed bottom-10 left-1/2 -translate-x-1/2 bg-slate-900/95 backdrop-blur-md text-white px-8 py-4 rounded-[2rem] shadow-2xl flex items-center gap-6 translate-y-40 transition-all duration-500 z-[100] opacity-0 border border-white/10">
                <div class="flex items-center gap-3">
                    <div id="selectedCount" class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center text-xs font-black">0</div>
                    <span class="text-[10px] font-black uppercase tracking-widest text-slate-400">Products Selected</span>
                </div>
                <div class="h-6 w-px bg-white/10"></div>
                <form id="bulkDeleteForm" action="{{ path('app_product_bulk_delete') }}" method="POST">
                    <input type="hidden" name="ids" id="bulkIdsInput">
                    <button type="submit" class="text-red-400 hover:text-red-300 font-black text-[10px] uppercase tracking-[0.2em] transition-colors">Delete Permanent</button>
                </form>
            </div>
        {% else %}
            <div id="noResults" class="py-32 text-center bg-white rounded-[3rem] border-2 border-dashed border-slate-100">
                <h3 class="text-xl font-black text-slate-400 uppercase tracking-widest">Empty Inventory</h3>
            </div>
        {% endif %}

        {# No Search Results State #}
        <div id="noSearchResults" class="hidden py-32 text-center">
            <h3 class="text-xl font-black text-slate-800 uppercase">No Matches Found</h3>
        </div>

        {# Lightbox #}
        <div id="image-lightbox" onclick="closeLightbox()" class="fixed inset-0 z-[600] hidden bg-slate-900/95 backdrop-blur-xl cursor-zoom-out items-center justify-center p-8">
            <img id="lightbox-img" src="" class="max-h-full max-w-full rounded-[2rem] shadow-2xl border-4 border-white/10">
        </div>

        {# Delete Modal #}
        <div id="deleteModal" class="fixed inset-0 z-[600] hidden items-center justify-center p-6 bg-slate-900/80 backdrop-blur-md">
            <div class="bg-white rounded-[3rem] max-w-md w-full p-10 shadow-2xl border border-white">
                <div class="w-20 h-20 bg-red-50 text-red-500 rounded-[1.5rem] flex items-center justify-center mb-6 mx-auto">
                    <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2.5" stroke-linecap="round"/></svg>
                </div>
                <h3 class="text-2xl font-black text-slate-900 text-center mb-3">Remove Item?</h3>
                <p class="text-slate-500 text-center font-semibold mb-8 text-sm">This action is permanent and will affect records.</p>
                <div class="flex gap-3">
                    <button onclick="closeDeleteModal()" class="flex-1 py-4 bg-slate-50 text-slate-600 rounded-2xl font-black uppercase text-[10px] tracking-widest">Keep It</button>
                    <form id="modalDeleteForm" method="POST" class="flex-1">
                        <input type="hidden" name="_token" id="modalDeleteToken">
                        <button type="submit" class="w-full py-4 bg-red-500 text-white rounded-2xl font-black uppercase text-[10px] tracking-widest">Yes, Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>.line-clamp-1 { display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; overflow: hidden; }</style>

    <script>
        (function() {
            // 1. Lightbox
            window.maximizeImage = function(img) {
                const lb = document.getElementById('image-lightbox');
                document.getElementById('lightbox-img').src = img.src;
                lb.classList.replace('hidden', 'flex');
                document.body.style.overflow = 'hidden';
            };
            window.closeLightbox = () => {
                document.getElementById('image-lightbox').classList.replace('flex', 'hidden');
                document.body.style.overflow = 'auto';
            };

            // 2. Export with Filter (Matching your Controller 'q' param)
            const exportBtn = document.getElementById('exportBtn');
            const tableSearch = document.getElementById('tableSearch');
            if (exportBtn && tableSearch) {
                exportBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const searchTerm = tableSearch.value.trim();
                    const url = new URL(this.href, window.location.origin);
                    if (searchTerm) url.searchParams.set('q', searchTerm); // SETS 'q' TO MATCH CONTROLLER
                    window.location.href = url.toString();
                });
            }

            // 3. Instant Search (UI only)
            tableSearch.addEventListener('input', function(e) {
                const term = e.target.value.toLowerCase();
                const cards = document.querySelectorAll('.product-card');
                let found = 0;
                cards.forEach(card => {
                    const text = card.innerText.toLowerCase();
                    const match = text.includes(term);
                    card.style.display = match ? '' : 'none';
                    if (match) found++;
                });
                document.getElementById('noSearchResults').classList.toggle('hidden', found > 0 || term === '');
            });

            // 4. Select Mode
            const toggleBtn = document.getElementById('toggleSelectMode');
            const selectModeText = document.getElementById('selectModeText');
            let isSelectMode = false;

            toggleBtn.addEventListener('click', () => {
                isSelectMode = !isSelectMode;
                toggleBtn.classList.toggle('bg-blue-600', isSelectMode);
                toggleBtn.classList.toggle('text-white', isSelectMode);
                selectModeText.innerText = isSelectMode ? "Cancel" : "Select Items";

                document.querySelectorAll('.checkbox-col').forEach(col => {
                    col.classList.toggle('opacity-0', !isSelectMode);
                    col.classList.toggle('pointer-events-none', !isSelectMode);
                });

                if (!isSelectMode) {
                    document.querySelectorAll('.product-checkbox').forEach(cb => cb.checked = false);
                    updateBatchBar();
                }
            });

            // 5. Batch Logic
            document.querySelectorAll('.product-checkbox').forEach(cb => {
                cb.addEventListener('change', updateBatchBar);
            });

            function updateBatchBar() {
                const checked = document.querySelectorAll('.product-checkbox:checked');
                const bar = document.getElementById('batchBar');
                if (checked.length > 0) {
                    document.getElementById('selectedCount').innerText = checked.length;
                    document.getElementById('bulkIdsInput').value = Array.from(checked).map(c => c.value).join(',');
                    bar.classList.remove('translate-y-40', 'opacity-0');
                } else {
                    bar.classList.add('translate-y-40', 'opacity-0');
                }
            }

            // 6. Delete Modal
            window.openConfirmModal = (type, url, token) => {
                document.getElementById('modalDeleteForm').action = url;
                document.getElementById('modalDeleteToken').value = token;
                document.getElementById('deleteModal').classList.replace('hidden', 'flex');
            };
            window.closeDeleteModal = () => document.getElementById('deleteModal').classList.replace('flex', 'hidden');
        })();
    </script>
{% endblock %}
