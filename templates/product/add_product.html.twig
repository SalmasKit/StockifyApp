{% extends 'base.html.twig' %}

{% block title %}{{ product.id ? 'Edit' : 'Add' }} Product{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto px-6 py-10 antialiased">

        {# --- SAPPHIRE HEADER --- #}
        <div class="relative overflow-hidden bg-slate-900 rounded-[2.5rem] p-8 mb-8 shadow-2xl shadow-slate-900/30 border border-slate-800">
            <div class="absolute top-0 right-0 -mr-20 -mt-20 w-80 h-80 bg-blue-500/10 rounded-full blur-3xl"></div>
            <div class="relative flex flex-col md:flex-row justify-between items-center gap-6">
                <div class="flex items-center gap-6">
                    <div class="w-14 h-14 bg-gradient-to-br from-blue-400 to-blue-600 rounded-2xl flex items-center justify-center shadow-lg shadow-blue-500/40">
                        <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-2xl font-black text-white tracking-tight">{{ product.id ? 'Edit Product' : 'New Product' }}</h1>
                        <p class="text-slate-400 font-bold uppercase text-[9px] tracking-[0.3em]">Catalog Management</p>
                    </div>
                </div>
                <a href="{{ path('app_product_index') }}" class="px-5 py-2.5 bg-slate-800 hover:bg-slate-700 text-slate-300 font-black rounded-xl uppercase text-[10px] tracking-widest transition-all">
                    Back to List
                </a>
            </div>
        </div>

        {# GLOBAL ERROR ALERT (If form is submitted and has errors) #}
        {% if not form.vars.valid %}
            <div class="mb-8 p-5 bg-red-50 border-2 border-red-100 rounded-3xl flex items-center gap-4 animate-bounce">
                <div class="w-10 h-10 bg-red-500 rounded-xl flex items-center justify-center text-white flex-shrink-0">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"/></svg>
                </div>
                <div>
                    <h4 class="text-sm font-black text-red-900 uppercase tracking-tight">Form Validation Failed</h4>
                    <p class="text-red-500 text-[10px] font-bold uppercase tracking-widest">Please correct the highlighted fields below.</p>
                </div>
            </div>
        {% endif %}

        {{ form_start(form, {'attr': {'id': 'product-form', 'novalidate': 'novalidate'}}) }}
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

            {# --- LEFT COLUMN: DATA --- #}
            <div class="lg:col-span-2 space-y-6">

                {# General Info Card #}
                <div class="bg-white rounded-[2rem] border border-slate-100 shadow-sm overflow-hidden">
                    <div class="px-8 py-6 border-b border-slate-50 flex items-center gap-3">
                        <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                        <h3 class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">General Details</h3>
                    </div>
                    <div class="p-8 space-y-6">
                        <div>
                            {{ form_label(form.name, 'Product Name *', {'label_attr': {'class': 'block text-[10px] font-black text-slate-500 uppercase tracking-widest mb-2'}}) }}
                            {{ form_widget(form.name, {'attr': {'required': 'required', 'class': 'w-full bg-slate-50 border-2 border-transparent focus:bg-white focus:border-blue-500 rounded-2xl px-5 py-3.5 outline-none transition-all font-bold text-slate-700' ~ (form.name.vars.errors|length > 0 ? ' border-red-400 bg-red-50' : '')}}) }}
                            <div class="text-red-500 text-[10px] font-bold mt-2 uppercase tracking-wide">{{ form_errors(form.name) }}</div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                {{ form_label(form.category, 'Category *', {'label_attr': {'class': 'block text-[10px] font-black text-slate-500 uppercase tracking-widest mb-2'}}) }}
                                {{ form_widget(form.category, {'attr': {'required': 'required', 'class': 'w-full bg-slate-50 border-2 border-transparent focus:bg-white focus:border-blue-500 rounded-2xl px-5 py-3.5 outline-none transition-all font-bold text-slate-700' ~ (form.category.vars.errors|length > 0 ? ' border-red-400 bg-red-50' : '')}}) }}
                                <div class="text-red-500 text-[10px] font-bold mt-2 uppercase tracking-wide">{{ form_errors(form.category) }}</div>
                            </div>
                            <div>
                                {{ form_label(form.unit, 'Measuring Unit *', {'label_attr': {'class': 'block text-[10px] font-black text-slate-500 uppercase tracking-widest mb-2'}}) }}
                                {{ form_widget(form.unit, {'attr': {'required': 'required', 'class': 'w-full bg-slate-50 border-2 border-transparent focus:bg-white focus:border-blue-500 rounded-2xl px-5 py-3.5 outline-none transition-all font-bold text-slate-700' ~ (form.unit.vars.errors|length > 0 ? ' border-red-400 bg-red-50' : '')}}) }}
                                <div class="text-red-500 text-[10px] font-bold mt-2 uppercase tracking-wide">{{ form_errors(form.unit) }}</div>
                            </div>
                        </div>

                        <div>
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-[10px] font-black text-slate-500 uppercase tracking-widest mb-2'}}) }}
                            {{ form_widget(form.description, {'attr': {'rows': '4', 'class': 'w-full bg-slate-50 border-2 border-transparent focus:bg-white focus:border-blue-500 rounded-2xl px-5 py-3.5 outline-none transition-all font-bold text-slate-700'}}) }}
                        </div>
                    </div>
                </div>

                {# Pricing Card #}
                <div class="bg-white rounded-[2rem] border border-slate-100 shadow-sm overflow-hidden">
                    <div class="px-8 py-6 border-b border-slate-50 flex items-center gap-3">
                        <div class="w-2 h-2 bg-emerald-500 rounded-full"></div>
                        <h3 class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em]">Inventory & Pricing</h3>
                    </div>
                    <div class="p-8 grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div>
                            {{ form_label(form.price, 'Unit Price (MAD) *', {'label_attr': {'class': 'block text-[10px] font-black text-slate-500 uppercase tracking-widest mb-2'}}) }}
                            <div class="relative">
                                {{ form_widget(form.price, {'attr': {'required': 'required', 'class': 'w-full bg-slate-50 border-2 border-transparent focus:bg-white focus:border-blue-500 rounded-2xl pl-5 pr-14 py-3.5 outline-none transition-all font-black text-xl text-slate-800' ~ (form.price.vars.errors|length > 0 ? ' border-red-400 bg-red-50' : '')}}) }}
                                <span class="absolute right-5 top-1/2 -translate-y-1/2 text-[10px] font-black text-blue-500 tracking-tighter">MAD</span>
                            </div>
                            <div class="text-red-500 text-[10px] font-bold mt-2 uppercase tracking-wide">{{ form_errors(form.price) }}</div>
                        </div>
                        <div>
                            {{ form_label(form.quantity, 'Stock Quantity *', {'label_attr': {'class': 'block text-[10px] font-black text-slate-500 uppercase tracking-widest mb-2'}}) }}
                            <div class="flex items-center bg-slate-50 rounded-2xl border-2 border-transparent focus-within:border-blue-500 focus-within:bg-white transition-all overflow-hidden {{ (form.quantity.vars.errors|length > 0) ? 'border-red-400 bg-red-50' : '' }}">
                                <button type="button" onclick="this.nextElementSibling.stepDown()" class="px-6 py-3.5 hover:bg-slate-100 text-slate-400 transition-colors">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="3" d="M20 12H4"/></svg>
                                </button>
                                {{ form_widget(form.quantity, {'attr': {'required': 'required', 'class': 'w-full text-center bg-transparent border-none outline-none font-black text-xl text-slate-800'}}) }}
                                <button type="button" onclick="this.previousElementSibling.stepUp()" class="px-6 py-3.5 hover:bg-slate-100 text-slate-400 transition-colors">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="3" d="M12 4v16m8-8H4"/></svg>
                                </button>
                            </div>
                            <div class="text-red-500 text-[10px] font-bold mt-2 uppercase tracking-wide">{{ form_errors(form.quantity) }}</div>
                        </div>
                    </div>
                </div>
            </div>

            {# --- RIGHT COLUMN: MEDIA & ACTIONS --- #}
            <div class="space-y-6">
                <div class="bg-white rounded-[2rem] border border-slate-100 shadow-sm p-6 text-center">
                    <h3 class="text-[10px] font-black text-slate-400 uppercase tracking-[0.2em] mb-6">Product Image</h3>

                    <div id="image-container" class="group relative aspect-square w-full rounded-3xl bg-slate-50 border-2 border-dashed border-slate-200 overflow-hidden mb-6 flex items-center justify-center transition-all hover:border-blue-400">
                        {% if product.imageUrl %}
                            <img id="current-view" src="{{ asset('uploads/products/' ~ product.imageUrl) }}" class="object-cover w-full h-full">
                        {% endif %}
                        <img id="new-preview" src="#" class="hidden absolute inset-0 object-cover w-full h-full z-10">

                        <div id="placeholder-icon" class="flex flex-col items-center {{ product.imageUrl ? 'hidden' : '' }}">
                            <svg class="w-12 h-12 text-slate-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" stroke-width="2"/></svg>
                            <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Upload Photo</span>
                        </div>
                    </div>

                    <div class="relative">
                        {{ form_widget(form.image, {'attr': {'onchange': 'updatePreview(event)', 'class': 'opacity-0 absolute inset-0 w-full h-full cursor-pointer z-20'}}) }}
                        <div class="w-full py-3 px-4 bg-slate-100 hover:bg-blue-50 text-slate-600 hover:text-blue-600 rounded-xl font-black text-[10px] uppercase tracking-widest transition-all">
                            Browse Files
                        </div>
                    </div>
                    <div class="text-red-500 text-[10px] font-bold mt-2 uppercase tracking-wide">{{ form_errors(form.image) }}</div>
                </div>

                <div class="bg-white rounded-[2rem] border border-slate-100 shadow-sm p-8">
                    <button type="button" onclick="validateAndOpenModal('{{ product.id ? 'update' : 'create' }}')" class="w-full bg-blue-600 hover:bg-blue-500 text-white font-black py-4 rounded-2xl shadow-xl shadow-blue-100 transition-all transform active:scale-95 uppercase text-[10px] tracking-[0.2em] mb-4">
                        {{ product.id ? 'Save Changes' : 'Publish Product' }}
                    </button>
                    <a href="{{ path('app_product_index') }}" class="block text-center text-[10px] font-black text-slate-400 hover:text-red-500 uppercase tracking-widest transition-colors">Discard</a>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    {# --- MODAL --- #}
    <div id="confirm-modal" class="fixed inset-0 z-[100] hidden items-center justify-center p-6 bg-slate-900/80 backdrop-blur-md">
        <div class="bg-white rounded-[3rem] max-w-sm w-full p-10 shadow-2xl border border-white transform transition-all">
            <div id="modal-icon-container" class="w-20 h-20 bg-blue-50 text-blue-600 rounded-[1.5rem] flex items-center justify-center mb-6 mx-auto">
                <svg id="modal-icon" class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/></svg>
            </div>
            <h3 id="modal-title" class="text-2xl font-black text-slate-900 text-center mb-2">Confirm Action</h3>
            <p id="modal-desc" class="text-slate-500 text-center font-semibold text-sm mb-10 leading-relaxed">Are you sure you want to proceed with this inventory update?</p>

            <div id="modal-actions" class="flex gap-3">
                <button type="button" onclick="closeConfirmModal()" class="flex-1 py-4 bg-slate-50 text-slate-600 rounded-2xl font-black uppercase text-[10px] tracking-widest">Cancel</button>
                <button type="button" onclick="submitProductForm()" class="flex-1 py-4 bg-blue-600 text-white rounded-2xl font-black uppercase text-[10px] tracking-widest shadow-lg shadow-blue-100">Confirm</button>
            </div>
        </div>
    </div>

    <script>
        function updatePreview(event) {
            const reader = new FileReader();
            reader.onload = function() {
                const preview = document.getElementById('new-preview');
                const placeholder = document.getElementById('placeholder-icon');
                const current = document.getElementById('current-view');

                preview.src = reader.result;
                preview.classList.remove('hidden');
                placeholder.classList.add('hidden');
                if(current) current.classList.add('hidden');
            };
            if(event.target.files[0]) {
                reader.readAsDataURL(event.target.files[0]);
            }
        }

        function validateAndOpenModal(actionType) {
            const form = document.getElementById('product-form');
            const modal = document.getElementById('confirm-modal');
            const title = document.getElementById('modal-title');
            const desc = document.getElementById('modal-desc');
            const iconContainer = document.getElementById('modal-icon-container');
            const modalActions = document.getElementById('modal-actions');

            // Trigger HTML5 Validation check
            if (!form.checkValidity()) {
                // If invalid, show an "Error" version of the modal
                title.innerText = "Missing Information";
                desc.innerText = "Please fill in all required fields (*) before saving.";
                iconContainer.className = "w-20 h-20 bg-red-50 text-red-600 rounded-[1.5rem] flex items-center justify-center mb-6 mx-auto";
                document.getElementById('modal-icon').innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"/>';
                modalActions.innerHTML = '<button type="button" onclick="closeConfirmModal()" class="w-full py-4 bg-slate-900 text-white rounded-2xl font-black uppercase text-[10px] tracking-widest">I will fix it</button>';

                // Trigger native browser tooltips
                form.reportValidity();
            } else {
                // If valid, show the confirmation modal
                title.innerText = actionType === 'create' ? "Create Product" : "Update Product";
                desc.innerText = "Are you sure you want to proceed with this inventory update?";
                iconContainer.className = "w-20 h-20 bg-blue-50 text-blue-600 rounded-[1.5rem] flex items-center justify-center mb-6 mx-auto";
                document.getElementById('modal-icon').innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/>';
                modalActions.innerHTML = `
                    <button type="button" onclick="closeConfirmModal()" class="flex-1 py-4 bg-slate-50 text-slate-600 rounded-2xl font-black uppercase text-[10px] tracking-widest">Cancel</button>
                    <button type="button" onclick="submitProductForm()" class="flex-1 py-4 bg-blue-600 text-white rounded-2xl font-black uppercase text-[10px] tracking-widest shadow-lg shadow-blue-100">Confirm</button>
                `;
            }
            modal.classList.replace('hidden', 'flex');
        }

        function closeConfirmModal() {
            document.getElementById('confirm-modal').classList.replace('flex', 'hidden');
        }

        function submitProductForm() {
            document.getElementById('product-form').submit();
        }
    </script>
{% endblock %}
