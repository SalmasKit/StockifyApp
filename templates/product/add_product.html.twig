{% extends 'base.html.twig' %}

{% block title %}{{ product.id ? 'Edit' : 'Add' }} Product{% endblock %}
{% block page_title %}{{ product.id ? 'Edit Product' : 'New Product' }}{% endblock %}

{% block body %}
    <div class="max-w-5xl mx-auto">
        {{ form_start(form, {'attr': {'id': 'product-form', 'novalidate': 'novalidate'}}) }}

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2 space-y-6">
                <div class="bg-white rounded-xl border-2 border-gray-100 shadow-sm overflow-hidden">
                    <div class="bg-slate-50 px-6 py-4 border-b border-gray-200">
                        <h3 class="text-sm font-bold text-slate-700 uppercase tracking-wider">General Information</h3>
                    </div>
                    <div class="p-6 space-y-5">
                        <div>
                            {{ form_label(form.name, 'Product Name', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.name, {'attr': {'class': 'w-full border-2 rounded-lg px-4 py-2 transition-all ' ~ (form.name.vars.errors|length > 0 ? 'border-red-500 bg-red-50' : 'border-gray-300 focus:ring-4 focus:ring-blue-100 focus:border-blue-500 outline-none')}}) }}
                            <div class="form-error-message">{{ form_errors(form.name) }}</div>
                        </div>
                        <div>
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.description, {'attr': {'rows': '3', 'class': 'w-full border-2 rounded-lg px-4 py-2 transition-all ' ~ (form.description.vars.errors|length > 0 ? 'border-red-500 bg-red-50' : 'border-gray-300 focus:ring-4 focus:ring-blue-100 focus:border-blue-500 outline-none')}}) }}
                            <div class="form-error-message">{{ form_errors(form.description) }}</div>
                        </div>
                        <div>
                            {{ form_label(form.category, 'Category', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.category, {'attr': {'class': 'w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 outline-none'}}) }}
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl border-2 border-gray-100 shadow-sm overflow-hidden">
                    <div class="bg-slate-50 px-6 py-4 border-b border-gray-200">
                        <h3 class="text-sm font-bold text-slate-700 uppercase tracking-wider">Pricing & Stock</h3>
                    </div>
                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div class="md:col-span-2">
                            {{ form_label(form.price, 'Price (MAD)', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.price, {'attr': {'class': 'w-full border-2 rounded-lg px-4 py-2 ' ~ (form.price.vars.errors|length > 0 ? 'border-red-500 bg-red-50' : 'border-gray-300 focus:border-blue-500 outline-none')}}) }}
                            <div class="form-error-message">{{ form_errors(form.price) }}</div>
                        </div>
                        <div>
                            {{ form_label(form.quantity, 'Quantity', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-2'}}) }}
                            <div class="flex items-center">
                                <button type="button" onclick="this.nextElementSibling.stepDown()" class="bg-white border-2 border-r-0 border-gray-300 px-4 py-2 rounded-l-lg hover:bg-gray-50 font-bold">-</button>
                                {{ form_widget(form.quantity, {'type': 'number', 'attr': {'class': 'w-full text-center border-2 border-gray-300 py-2 focus:border-blue-500 outline-none'}}) }}
                                <button type="button" onclick="this.previousElementSibling.stepUp()" class="bg-white border-2 border-l-0 border-gray-300 px-4 py-2 rounded-r-lg hover:bg-gray-50 font-bold">+</button>
                            </div>
                        </div>
                        <div>
                            {{ form_label(form.unit, 'Unit', {'label_attr': {'class': 'block text-sm font-semibold text-slate-700 mb-2'}}) }}
                            {{ form_widget(form.unit, {'attr': {'class': 'w-full border-2 border-gray-300 rounded-lg px-4 py-2 focus:border-blue-500 outline-none'}}) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="space-y-6">
                <div class="bg-white rounded-xl border-2 border-gray-100 shadow-sm p-6">
                    <h3 class="text-sm font-bold text-slate-700 uppercase tracking-wider mb-4 border-b pb-2 text-center">Image Preview</h3>
                    <div class="aspect-square w-full rounded-lg border-2 border-dashed border-gray-200 flex items-center justify-center bg-gray-50 overflow-hidden relative mb-4">
                        {% if product.imageUrl %}<img id="current-view" src="{{ asset('uploads/products/' ~ product.imageUrl) }}" class="object-cover w-full h-full">{% endif %}
                        <img id="new-preview" src="#" class="hidden absolute inset-0 object-cover w-full h-full z-10">
                    </div>
                    {{ form_widget(form.image, {'attr': {'onchange': 'updatePreview(event)', 'class': 'text-xs'}}) }}
                </div>

                <div class="bg-white rounded-xl border-2 border-gray-100 shadow-sm p-6">
                    <button type="button" onclick="openConfirmModal('{{ product.id ? 'update' : 'create' }}')" class="w-full bg-blue-600 text-white font-bold py-3 rounded-lg hover:bg-blue-700 transition shadow-lg shadow-blue-100 mb-3">
                        {{ product.id ? 'Save Changes' : 'Create Product' }}
                    </button>
                    <a href="{{ path('app_product_index') }}" class="block text-center text-sm font-semibold text-gray-500 hover:text-slate-800">Cancel</a>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

    <script>
        function updatePreview(event) {
            const reader = new FileReader();
            reader.onload = function() {
                const preview = document.getElementById('new-preview');
                preview.src = reader.result;
                preview.classList.remove('hidden');
            };
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
{% endblock %}
