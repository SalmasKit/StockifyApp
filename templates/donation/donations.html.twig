{% extends 'base.html.twig' %}

{% block title %}Donations{% endblock %}
{% block page_title %}New Donation{% endblock %}

{% block body %}
    <div class="max-w-[1600px] mx-auto px-6 pb-20 pt-4 antialiased">
        {# Header Section #}
        <div class="flex flex-col lg:flex-row lg:items-end justify-between gap-6 mb-8">
            <div>
                <h1 class="text-4xl font-black text-slate-900 tracking-tight mb-2">Create Donation</h1>
                <p class="text-slate-500 text-lg font-medium">Select products and adjust quantities for distribution.</p>
            </div>
            {# Error Toast #}
            <div id="error-toast" class="hidden px-6 py-3.5 bg-red-50 text-red-600 border-2 border-red-100 rounded-2xl text-sm font-black uppercase tracking-widest animate-bounce">
                Insufficient Stock!
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-8 h-[75vh]">

            {# --- LEFT SIDE: VERTICAL PRODUCT LIST --- #}
            <div class="w-full lg:w-1/3 flex flex-col bg-white rounded-[2.5rem] border-2 border-slate-100 shadow-xl shadow-slate-200/40 overflow-hidden">
                <div class="p-6 bg-slate-50 border-b-2 border-slate-100">
                    <div class="relative group">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <svg class="h-5 w-5 text-slate-400 group-focus-within:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-width="2.5" stroke-linecap="round"/></svg>
                        </div>
                        <input type="text" id="productSearch"
                               class="block w-full pl-11 pr-4 py-3.5 bg-white border-2 border-transparent focus:border-blue-500 rounded-2xl transition-all outline-none text-sm font-bold placeholder:text-slate-400"
                               placeholder="Search inventory...">
                    </div>
                </div>

                <div class="flex-grow overflow-y-auto p-4 space-y-3 custom-scrollbar" id="productList">
                    {% for product in products %}
                        <div class="product-item group flex items-center p-4 rounded-3xl border-2 border-transparent hover:border-blue-100 hover:bg-blue-50/30 transition-all cursor-pointer"
                             data-id="{{ product.id }}"
                             data-name="{{ product.name }}"
                             data-unit="{{ product.unit }}"
                             data-stock="{{ product.quantity }}"
                             data-img="{{ product.imageUrl ? asset('uploads/products/' ~ product.imageUrl) : '' }}">

                            <div class="h-16 w-16 flex-shrink-0">
                                {% if product.imageUrl %}
                                    <img src="{{ asset('uploads/products/' ~ product.imageUrl) }}" class="h-full w-full rounded-2xl object-cover shadow-sm border-2 border-white">
                                {% else %}
                                    <div class="h-full w-full rounded-2xl bg-slate-100 flex items-center justify-center text-slate-300">
                                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" stroke-width="2"/></svg>
                                    </div>
                                {% endif %}
                            </div>

                            <div class="ml-4 flex-grow">
                                <div class="font-black text-slate-800 text-sm uppercase tracking-tight group-hover:text-blue-600 transition-colors">{{ product.name }}</div>
                                <div class="text-[10px] font-black text-blue-500 uppercase tracking-widest mt-0.5">{{ product.category ? product.category.name : 'General' }}</div>
                                <div class="text-[11px] font-bold text-slate-400 mt-1">Stock: <span class="{{ product.quantity < 5 ? 'text-red-500' : 'text-slate-600' }}">{{ product.quantity }} {{ product.unit }}</span></div>
                            </div>

                            <button onclick="addToManifest(this.parentElement.dataset)"
                                    class="p-2.5 bg-white border-2 border-slate-100 text-slate-400 group-hover:bg-blue-600 group-hover:border-blue-600 group-hover:text-white rounded-xl transition-all shadow-sm active:scale-90">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M12 4v16m8-8H4" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg>
                            </button>
                        </div>
                    {% endfor %}
                </div>
            </div>

            {# --- RIGHT SIDE: MANIFEST TABLE --- #}
            <div class="w-full lg:w-2/3 flex flex-col bg-white rounded-[2.5rem] border-2 border-slate-100 shadow-xl shadow-slate-200/40 overflow-hidden">
                <div class="flex-grow overflow-x-auto custom-scrollbar">
                    <table class="w-full text-left border-collapse">
                        <thead>
                        <tr class="bg-slate-50 border-b-2 border-slate-100">
                            <th class="px-8 py-6 text-[11px] font-black text-slate-400 uppercase tracking-[0.2em]">Visual</th>
                            <th class="px-8 py-6 text-[11px] font-black text-slate-400 uppercase tracking-[0.2em]">Nom</th>
                            <th class="px-8 py-6 text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] text-center">Quantité</th>
                            <th class="px-8 py-6 text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] text-center">Unité</th>
                            <th class="px-8 py-6 text-[11px] font-black text-slate-400 uppercase tracking-[0.2em] text-right">Actions</th>
                        </tr>
                        </thead>
                        <tbody id="manifestBody" class="divide-y divide-slate-100"></tbody>
                    </table>

                    <div id="emptyTableState" class="py-32 text-center">
                        <div class="inline-flex items-center justify-center w-20 h-20 rounded-[2rem] bg-slate-50 mb-4">
                            <svg class="w-10 h-10 text-slate-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" stroke-width="2"/></svg>
                        </div>
                        <p class="text-slate-400 font-bold uppercase text-[11px] tracking-widest">Manifest is empty</p>
                    </div>
                </div>

                <div class="p-8 bg-slate-50 border-t-2 border-slate-100 flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <div class="text-slate-400 font-black text-[10px] uppercase tracking-widest">Total Types</div>
                        <div id="manifestBadge" class="px-4 py-1 bg-slate-900 text-white rounded-full text-xs font-black">0</div>
                    </div>
                    <button onclick="openConfirmModal()"
                            class="px-10 py-4 bg-blue-600 hover:bg-blue-700 text-white font-black rounded-2xl shadow-xl shadow-blue-200 uppercase text-[11px] tracking-[0.2em] transition-all active:scale-95">
                        Confirm Donation
                    </button>
                </div>
            </div>
        </div>
    </div>

    {# --- CONFIRMATION MODAL --- #}
    <div id="confirmModal" class="fixed inset-0 z-[600] hidden items-center justify-center p-6">
        <div class="fixed inset-0 bg-slate-900/80 backdrop-blur-md" onclick="closeConfirmModal()"></div>
        <div class="relative bg-white rounded-[3rem] max-w-md w-full p-10 shadow-2xl">
            <div class="w-24 h-24 bg-blue-50 rounded-[2rem] flex items-center justify-center mb-8 mx-auto">
                <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
            </div>
            <h3 class="text-3xl font-black text-slate-900 text-center mb-3">Finalize?</h3>
            <p class="text-slate-500 text-center font-semibold mb-10 leading-relaxed">Confirm distribution of <span id="modalItemCount" class="text-blue-600">0</span> items.</p>
            <div class="flex gap-4">
                <button onclick="closeConfirmModal()" class="flex-1 py-4 bg-slate-100 text-slate-700 rounded-2xl font-black uppercase text-[10px] tracking-widest">Cancel</button>
                <button onclick="processDonation()" class="flex-1 py-4 bg-blue-600 text-white rounded-2xl font-black uppercase text-[10px] tracking-widest shadow-lg shadow-blue-100">Confirm</button>
            </div>
        </div>
    </div>

    <style>
        .custom-scrollbar::-webkit-scrollbar { width: 5px; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #e2e8f0; border-radius: 10px; }
    </style>

    <script>
        let manifest = [];

        function addToManifest(data) {
            if (manifest.find(item => item.id === data.id)) return;
            manifest.push({ ...data, amount: 1 });
            renderManifest();
        }

        function removeFromManifest(id) {
            manifest = manifest.filter(item => item.id !== id);
            renderManifest();
        }

        function updateAmount(id, value) {
            const item = manifest.find(i => i.id === id);
            if (item) item.amount = parseFloat(value) || 0;
        }

        function renderManifest() {
            const body = document.getElementById('manifestBody');
            const emptyState = document.getElementById('emptyTableState');
            const badge = document.getElementById('manifestBadge');

            body.innerHTML = '';
            badge.innerText = manifest.length;
            emptyState.classList.toggle('hidden', manifest.length > 0);

            manifest.forEach(item => {
                body.innerHTML += `
                    <tr class="hover:bg-slate-50/50 transition-all">
                        <td class="px-8 py-4">
                            <img src="${item.img || 'https://placehold.co/100'}" class="h-12 w-12 rounded-xl object-cover border-2 border-white shadow-sm">
                        </td>
                        <td class="px-8 py-4 font-black text-slate-800 uppercase text-xs">${item.name}</td>
                        <td class="px-8 py-4 text-center">
                            <input type="number" value="${item.amount}" min="1" onchange="updateAmount('${item.id}', this.value)"
                                   class="w-24 px-4 py-2 bg-slate-50 border-2 border-transparent focus:border-blue-500 focus:bg-white rounded-xl text-center font-black text-blue-600 outline-none transition-all">
                        </td>
                        <td class="px-8 py-4 text-center text-[10px] font-black text-slate-400 uppercase tracking-widest">${item.unit}</td>
                        <td class="px-8 py-4 text-right">
                            <button onclick="removeFromManifest('${item.id}')" class="p-2 text-slate-300 hover:text-red-500 transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
                            </button>
                        </td>
                    </tr>
                `;
            });
        }

        function openConfirmModal() {
            if (manifest.length === 0) return;
            document.getElementById('modalItemCount').innerText = manifest.length;
            document.getElementById('confirmModal').classList.replace('hidden', 'flex');
        }

        function closeConfirmModal() {
            document.getElementById('confirmModal').classList.replace('flex', 'hidden');
        }

        async function processDonation() {
            const response = await fetch("{{ path('app_donation_confirm') }}", {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ items: manifest })
            });

            if (response.ok) {
                window.location.reload();
            } else {
                closeConfirmModal();
                const toast = document.getElementById('error-toast');
                toast.innerText = await response.text();
                toast.classList.remove('hidden');
                setTimeout(() => toast.classList.add('hidden'), 5000);
            }
        }

        document.getElementById('productSearch').addEventListener('keyup', function() {
            let filter = this.value.toLowerCase();
            document.querySelectorAll('.product-item').forEach(item => {
                item.style.display = item.dataset.name.toLowerCase().includes(filter) ? 'flex' : 'none';
            });
        });
    </script>
{% endblock %}
